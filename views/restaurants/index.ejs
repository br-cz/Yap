<% layout('layouts/boilerplate') %>
    <h1>Restaurants View</h1>
    <div>
        <a href="/restaurants/new"> Add a restaurant</a>
    </div>
    <ul>
        <% for(let resto of restaurants){%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" alt=""
                        src="<%= resto.images[0].url %>" >
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= resto.title %> </h5>
                            <p class="card-text"><%= resto.description %></p>
                            <p class="card-text">
                                <small class="text-muted"><%= resto.location%></small>
                            </p>
                            <a class="btn btn-primary" href="/restaurants/<%=resto._id%>">View <%=resto.title%></a>
                        </div>
                    </div>
                </div>
            </div>
        <%}%>
    </ul>