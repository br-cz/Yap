<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">Edit Restaurant</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/restaurants/<%=restaurant._id%>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="restaurant[title]"
                    value="<%=restaurant.title %>" required>
                <div class="valid-feedback">
                    Sounds better!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="restaurant[location]"
                    value="<%=restaurant.location %>" required>
                <div class="valid-feedback">
                    How's the new place?
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="priceRange">Restaurant Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="priceRange" placeholder="0.00" aria-label="priceRange"
                        aria-describedby="price-label" name="restaurant[priceRange]" value="<%=restaurant.priceRange %>" required>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="restaurant[description]"
                    required><%= restaurant.description%></textarea>
                <div class="valid-feedback">
                    Even better!
                </div>
            </div>

            <div class="mb-3">
                <label for="formFileMultiple" class="form-label">Add Image(s)</label>
                <input class="form-control" type="file" id="image" name="image" multiple>
            </div>


            <div class="mb-3">
                <% restaurant.images.forEach(function(img, i) {  %>
                <img src="<%=img.url %>" class="img-thumbnail" alt="">
                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                </div>
                <label for="image-<%=i%>">Delete Image</label>
                <% })%>
            </div>

            <div class="mb-3">
                <button class="btn btn-info">Update Restaurant Info</button>
            </div>
        </form>
        <a href="/restaurants/<%= restaurant._id%>">Cancel Edit</a>
    </div>
</div>