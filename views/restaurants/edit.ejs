<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">Edit Restaurant</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/restaurants/<%=restaurant._id%>?_method=PUT" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="restaurant[title]"
                    value="<%=restaurant.title %>" required>
                <div class="valid-feedback">
                    Sounds better!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="restaurant[location]"
                    value="<%=restaurant.location %>" required>
                <div class="valid-feedback">
                    How's the new place?
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="priceRange">Restaurant Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="priceRange" placeholder="0.00" aria-label="priceRange"
                        aria-describedby="price-label" name="restaurant[priceRange]" value="<%=restaurant.priceRange %>" required>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="restaurant[description]"
                    required><%= restaurant.description%></textarea>
                <div class="valid-feedback">
                    Even better!
                </div>
            </div>

            <div class="mb-3">
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input" id="image" name="image" multiple>
                    <label class="form-file-label" for="image">
                        <span class="form-file-text custom-file-label">Add more image(s)...</span>
                        <span class="form-file-button">Browse</span>
                    </label>
                </div>
            </div>

            <div class="mb-3">
                <button class="btn btn-info">Update Restaurant Info</button>
            </div>
        </form>
        <a href="/restaurant/<%= restaurant._id%>">Cancel Edit</a>
    </div>
</div>