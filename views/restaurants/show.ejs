<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/stars.css">

    <div class="row">
        <div class="col-6">
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <% restaurant.images.forEach((img, i)=> { %>
                        <!-- used to display the first image in the carousel and set it up properly so the carousel actually shows-->
                        <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
                            <img src="<%= img.url%>" class="d-block w-100" alt="...">
                        </div>
                        <% }) %>
                </div>
                <% if (restaurant.images.length> 1 ) {%>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                    <% } %>
            </div>


            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= restaurant.title%>
                    </h5>
                    <p class="card-text">
                        <%= restaurant.description%>
                    </p>
                </div>

                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= restaurant.location%>
                            <div id='map' style='width: 600px; height: 300px;'></div>

                    </li>
                    <li class="list-group-item">$<%= restaurant.priceRange%>/night</li>
                </ul>

                <% if (currentUser && restaurant.author.equals(currentUser)) {%>
                    <div class="card-body">
                        <a class="card-link btn btn-info" href="/restaurants/<%=restaurant._id%>/edit">Edit</a>
                        <form class="d-inline" action="/restaurants/<%=restaurant._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                        <a class="card-link btn btn-primary" href="/restaurants">See All Restaurants</a>
                    </div>
                    <% } %>
                        <div class="card-footer text-muted">
                            Posted by <%= restaurant.author.username%>
                        </div>
            </div>
        </div>

        <div class="col-6">
            <% if(currentUser) {%>
                <h3>Feel Free To Leave a Review!</h3>
                <form action="/restaurants/<%=restaurant._id%>/reviews" method="POST" class="mb-3 validated-form"
                    novalidate>
                    <!-- <div class="mb-3">
                    <label class="form-label" for="rating">Rating</label>
                    <!-- <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating"> -->
                    <!-- </div>   -->
                    <div class="mb-3">
                        <fieldset class="starability-basic">
                            <legend>Rating:</legend>
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="5"
                                checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>
                    <div class="mb-3">
                        <!-- <label class="form-label" for="body">Review</label> -->
                        <legend>Review:</legend>
                        <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3"
                            required></textarea>
                        <div class="valid-feedback">
                            Cool!
                        </div>
                    </div>
                    <button class="btn btn-success">Submit</button>
                    <% } %>
                </form>
                <% for(let review of restaurant.reviews) { %>
                    <div class="card mb-3 ">
                        <div class="card-body">
                            <!-- <h5 class="card-title">Rating: <%= review.rating %></h5> -->
                            <p class="starability-result" data-rating="<%= review.rating %>">
                                Rated: <%= review.rating %> stars
                            </p>

                            <p class="card-text">Review: <%= review.body %>
                            </p>
                            <div class="card-footer text-muted">
                                Reviewed by <%= review.author.username%>
                            </div>

                            <!-- <% if (currentUser && review.author.equals(currentUser)) {%>  -->
                            <form action="/restaurants/<%=restaurant._id%>/reviews/<%=review._id%>?_method=DELETE"
                                method="POST">
                                <button class="btn btn-sm btn-danger">Delete</button>
                            </form>
                            <!-- <% } %>  -->
                        </div>
                    </div>
                    <% } %>
        </div>
    </div>

    <!-- Need to get this token before we run the script below as EJS runs the code as HTML -->
    <script>
        const mbToken = '<%-process.env.MAPBOX_TOKEN %>';
        // Need to stringify because restaurant ID needs to be in quotes, else it throws an error
        //Make sure no spaces in the ejs assignment!!!!!!!!!!!!!!!!
        const restaurant = <%-JSON.stringify( restaurant ) %>;
    </script>

    <script src="/javascripts/showPageMap.js"></script>