<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/stars.css">

    <div class="row">
        <div class="col-6">
            <div class="card mb-3">
                <% for(let img of restaurant.images){ %>                
                    <img src="<%= img.url%>" class="card-img-top" alt="...">
                <% } %> 
                <div class="card-body">
                    <h5 class="card-title">
                        <%= restaurant.title%>
                    </h5>
                    <p class="card-text">
                        <%= restaurant.description%>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= restaurant.location%>
                    </li>
                    <li class="list-group-item">$<%= restaurant.priceRange%>/night</li>
                </ul>

                <% if (currentUser && restaurant.author.equals(currentUser)) {%> 
                <div class="card-body">
                    <a class="card-link btn btn-info" href="/restaurants/<%=restaurant._id%>/edit">Edit</a>
                    <form class="d-inline" action="/restaurants/<%=restaurant._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                    <a class="card-link btn btn-primary" href="/restaurants">See All Restaurants</a>
                </div>
                <% } %> 
                <div class="card-footer text-muted">
                    Posted by <%= restaurant.author.username%>
                </div>
            </div>
        </div>

        <div class="col-6">
            <% if(currentUser) {%> 
            <h3>Feel Free To Leave a Review!</h3>
            <form action="/restaurants/<%=restaurant._id%>/reviews" method="POST" class="mb-3 validated-form" novalidate>
                <!-- <div class="mb-3">
                    <label class="form-label" for="rating">Rating</label>
                    <!-- <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating"> -->
                <!-- </div>   -->
                <div class="mb-3">
                <fieldset class="starability-basic">
                    <legend>Rating:</legend>
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="5" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                  </fieldset>
                </div>
                <div class="mb-3">
                    <!-- <label class="form-label" for="body">Review</label> -->
                    <legend>Review:</legend>
                    <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                    <div class="valid-feedback">
                        Cool!
                    </div>
                </div>
                <button class="btn btn-success">Submit</button>
                <% } %> 
            </form>
            <% for(let review of restaurant.reviews) { %>
            <div class="card mb-3 ">
                <div class="card-body">
                    <!-- <h5 class="card-title">Rating: <%= review.rating %></h5> -->
                    <p class="starability-result" data-rating="<%= review.rating %>">
                      Rated: <%= review.rating %> stars
                    </p>
                  
                    <p class="card-text">Review: <%= review.body %></p>
                    <div class="card-footer text-muted">
                        Reviewed by <%= review.author.username%>
                    </div>
                 
                    <!-- <% if (currentUser && review.author.equals(currentUser)) {%>  -->
                    <form action="/restaurants/<%=restaurant._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                    <!-- <% } %>  -->
                </div>
            </div>
            <% } %>
        </div>
    </div>

<script src="js/addons/rating.js"></script>