<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-6">
            <div class="card mb-3">
                <img src="<%= restaurant.image%>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= restaurant.title%>
                    </h5>
                    <p class="card-text">
                        <%= restaurant.description%>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= restaurant.location%>
                    </li>
                    <li class="list-group-item">$<%= restaurant.priceRange%>/night</li>
                </ul>

                <% if (currentUser && restaurant.author.equals(currentUser)) {%> 
                <div class="card-body">
                    <a class="card-link btn btn-info" href="/restaurants/<%=restaurant._id%>/edit">Edit</a>
                    <form class="d-inline" action="/restaurants/<%=restaurant._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                    <a class="card-link btn btn-primary" href="/restaurants">See All Restaurants</a>
                </div>
                <% } %> 
                <div class="card-footer text-muted">
                    Posted by <%= restaurant.author.username%>
                </div>
            </div>
        </div>

        <div class="col-6">
            <% if(currentUser) {%> 
            <h2>Feel Free To Leave a Review!</h2>
            <form action="/restaurants/<%=restaurant._id%>/reviews" method="POST" class="mb-3 validated-form" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="rating">Rating</label>
                    <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="body">Review</label>
                    <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                    <div class="valid-feedback">
                        Cool!
                    </div>
                </div>
                <button class="btn btn-success">Submit</button>
                <% } %> 
            </form>
            <% for(let review of restaurant.reviews) { %>
            <div class="card mb-3 ">
                <div class="card-body">
                    <h5 class="card-title">Rating: <%= review.rating %></h5>
                    <p class="card-text">Review: <%= review.body %></p>
                    <div class="card-footer text-muted">
                        Reviewed by <%= review.author.username%>
                    </div>
                 
                    <!-- <% if (currentUser && review.author.equals(currentUser)) {%>  -->
                    <form action="/restaurants/<%=restaurant._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                    <!-- <% } %>  -->
                </div>
            </div>
            <% } %>
        </div>
    </div>

<script src="js/addons/rating.js"></script>